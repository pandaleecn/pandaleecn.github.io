// 注册回调时调用，非常简洁。

struct Person {
  var name: String
  var age: Int
}
var optionalLisa: Person? = Person(name: "Lisa Simpson", age: 8)
  // 如果不是 nil，则增加
  if optionalLisa != nil {
  optionalLisa!.age += 1
